    <plot gridx="0"
          gridy="1"
          hspan="1"
          vspan="1"
          title="Velocity [deg/s]"
          size="1000"
          minval="-80"
          maxval="80"
          bgcolor="White">
        <graph remote="/yarpMinJerk/data:o"
               index="3"
               color="Green"
               title="Controller-Reference"
               type="lines"
               size="1" />
        <graph remote="/yarpMinJerk/data:o"
               index="4"
               color="Blue"
               title="Controller-Output"
               type="lines"
               size="1" />
