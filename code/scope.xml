          gridy="0"
          hspan="1"
          vspan="1"
          title="Position [deg]"
          size="1000"
          minval="0"
          maxval="80"
          bgcolor="White">
        <graph remote="/yarpMinJerk/data:o"
               index="0"
               color="Red"
               title="Reference"
               type="lines"
               size="1" />
        <graph remote="/yarpMinJerk/data:o"
               index="1"
               color="Green"
               title="Plant-Reference"
               type="lines"
               size="1" />
